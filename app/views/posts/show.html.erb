      <% if @post.kyoudou5.present? %>
        <% if User.find_by(name: "#{@post.kyoudou5}")==nil %>
          <p>・<%= @post.kyoudou5 %></p>
        <% else %>
          <p>・<%= link_to @post.kyoudou5, user_path(User.find_by(name: "#{@post.kyoudou5}").id) %></p>
        <% end %>
