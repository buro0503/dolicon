<%= stylesheet_link_tag 'index', :media => "all" %>

<html>
<head>
<link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js" type="text/javascript"></script>
</head>
<body>


<%= yield %>
<%= link_to "http://twitter.com/share?url=https://dolicon.herokuapp.com/&text=マンドリン演奏会情報サイト&hashtags=マンドリン演奏会&via=buro_gm" do %>
<i class="fa-brands fa-twitter"></i>
<% end %>

<div class="line-it-button" data-lang="ja" data-type="share-b" data-env="REAL" data-url="https://dolicon.herokuapp.com/" data-color="default" data-size="large" data-count="false" data-ver="3" style="display: none;"></div>
<script src="https://www.line-website.com/social-plugins/js/thirdparty/loader.min.js" async="async" defer="defer"></script>

<div class="title">
<% provide(:title, '投稿一覧') %>
<h1>投稿一覧</h1>
</div>

<div class="kensaku">
<h3>投稿を検索</h3>
<nobr><form action="/posts" accept-charset="UTF-8" method="get">
<input type="text" name="search1" id="search1" placeholder="団体名、曲目から検索可" />
<input type="submit" name="commit" value="検索する" data-disable-with="検索する" /></nobr>
</form></div>

</div>



<div class="post-top">
<div class="post-narabi">
    <f><%= link_to "実施日昇順・検索", posts_path %></f>
    <c><%= link_to "新着", posts_index_new_path %></c>
    <c><%= link_to "いいね順", posts_index_likes_path %></c>
</div>
  <%= page_entries_info @posts %>
</div>



<div class="post-zentai">
    <% @posts.each do |post| %>
      <div class="posts-container">
        <div class="post">
          <div class="main-box">
            <div class="left-container">
              <d><p><%= post.start_time.strftime("%-m月%-d日") %></p></d>
              <d><p>【<%= Prefecture.find(post.prefecture_id).name %>】
              
              <% if user_signed_in? %>
              <p><e><%= link_to User.find(post.user_id).name, user_path(post.user_id) %></p></d></e></p>
              <% else %>
              <p><e><%= User.find(post.user_id).name %></p></d></e></p>
              <% end %>
              <d><p><%= link_to post.image_url, "data-lightbox" => post.image_url do %>
              <%= image_tag post.image_url, size: "189x267" if post.image? %></p></d>
              <% end %>
            </div>

              <div class="likes_buttons" id="likes_buttons_<%= post.id %>">
                <e><%= render partial: 'likes/like', locals: {post: post} %></e>
              </div>
              <div class="index_shousai">
                <e><p><%= link_to "詳細へ", post_path(post.id) %></p></e>
              </div>

          </div>
        </div>  
  

      </div>
    <% end %>
  </div>





</div>

<div class="pagenate_end">
<ul>
<%= paginate @posts %>
</ul>
</div>
</body>
</html>